{
    "$schema":"http://json-schema.org/draft-07/schema#",
    "$id":"com.przyjaznemisie.contracts.graph-to-ui",
    "title":"Graph -> UI",
    "type":"object",
    "properties":{
        "version":{
            "type":"integer",
            "exclusiveMinimum":0,
            "maximum":1
        },
        "entities":{
            "type":"array",
            "items":{
                "type":"object",
                "properties":{
                    "name":{
                        "type":"string"
                    },
                    "references":{
                        "type":"array",
                        "items":{
                            "type":"object",
                            "properties":{
                                "name":{
                                    "type":"string"
                                }
                            },
                            "required":[
                                "name"
                            ]
                        }
                    }
                },
                "required":[
                    "name",
                    "references"
                ]
            }
        }
    },
    "required":[
        "version",
        "entities"
    ]
}
